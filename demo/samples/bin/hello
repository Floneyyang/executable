#!/usr/bin/env

require 'executable'

class Hello < Executable::Command
  # Say it in uppercase?
  def load=(bool)
    @loud = bool
  end

  #
  def loud?
    @loud
  end

  # Show this message.
  def help?
    cli.show_help
    exit
  end
  alias :h? :help?

  # Say hello.
  def call(name)
    name = name || 'World'
    str  = "Hello, #{name}!"
    str  = str.upcase if loud?
    puts str
  end
end

